/* Form */

form input[type=text], select
	width: 100%
	padding: 12px 20px
	margin: 8px 0
	display: inline-block
	border: 2px solid #ccc
	border-radius: 1px
	box-sizing: border-box
	outline: none

form input::placeholder, textarea::placeholder
	font-size: 130%
	font-weight: 100

form textarea
	width: 100%
	padding: 12px 20px
	height: 200px
	margin: 8px 0
	display: inline-block
	border: 2px solid #ccc
	border-radius: 1px
	box-sizing: border-box
	outline: none
	resize: vertical

form input[type=text]:focus, textarea:focus
	background-color: #eeeeee

/* Style for section */
	
.section-wrapper
	display: flex
	justify-content: center
	//width: 100%
	max-width: 960px
	position: relative
	height: 600px

.section-header
	width: 100%
	position: absolute
	z-index: 1
	display: flex
	justify-content: center

.section-left-column
	width: 42.5%
	position: absolute
	top: 150px
	left: 5%
	height: 100px
	text-align: left

.section-right-column
	width: 42.5%
	position: absolute
	top: 150px
	left: 52.5%
	height: 100px
	text-align: left
	font-family: $text-font


/* Style for section titles */


.section-title
	position: relative
	width: 200px
	height: 30px
	margin: 20px
	text-align: center
	padding: 10px
	color: $main-gray
	font-size: 200%
	+font-weight

.section-title-coners:after
	display: block
	content: ""
	width: 20px
	height: 20px
	position: absolute
	top: -10px
	right: -10px
	border-top: 1px solid $main-purple
	border-right: 1px solid $main-purple

.section-title-coners:before
	display: block
	content: ""
	width: 20px
	height: 20px
	position: absolute
	bottom: -10px
	left: -10px
	border-bottom: 1px solid $main-purple
	border-left: 1px solid $main-purple