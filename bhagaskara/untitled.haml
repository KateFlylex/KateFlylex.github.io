@import fonts
$header-font: normal 100 Existence-Light
$text-font: normal 100 Lato
$main-purple: #9f449b
$main-gray: #7f7f7f

*
	margin: 0
	padding: 0

html, body
	width: 100%
	height: 100% 

body
	//background: #282828
	background: #ffffff
	/* height: 100% */
	/* +font-weight */
	font: $text-font
	color: #676767
	overflow-x: hidden /*Отображается только область внутри элемента, остальное будет скрыто.*/
	box-sizing: border-box

a
	text-decoration: none

h1
	font-size: 400%
	margin: 0 10%

h2
	color: $main-gray
	font-size: 200%
	+font-weight

h3
	color: $main-gray
	font-size: 150%
	+font-weight

/* HOME */


#home
	background: url('../img/layer2.png') 50% 0 repeat-y fixed /* <проценты> Задает размер фоновой картинки в процентах от ширины или высоты элемента. repeat-y Фоновый рисунок повторяется только по вертикали */
	background-size: cover /* Масштабирует изображение с сохранением пропорций так, чтобы его ширина или высота равнялась ширине или высоте блока */
	background-position: center center /* center = center center = 50% 50% (по центру) по вертикали и горизонтали */
	display: flex
	//align-items: center
	padding: 7% 0
	justify-content: center
	/* height: 100% */
	//min-height: 550px
	position: relative
	text-align: center
	color: #ffffff
	font-size: 100%
	+font-weight
	//min-width: 480px

#home p
	margin: 20px 10%

.menu-icon
	display: flex
	justify-content: center

.menu-icon div
	display: inline-block
	vertical-align: top
	
.icon-img
	//max-width: 130px

.menu-icon-left
	width: 100%

.menu-icon-center
	width: 100%

.menu-icon-right
	width: 100%

/* @media screen and (max-width: 635px) */


@media screen and (max-width: 480px)
	#home
		min-height: 300px
		height: 200px
	.menu-icon, .menu-icon-center, .menu-icon-right, .menu-icon-left
		visibility: hidden


/* TOP BAR SECTION */

ul {
    display: block;
    margin: 0;
    padding: 0;
    list-style: none;
}
ul:after {
    display: block;
    content: ' ';
    clear: both;
    float: none;
}
ul.menu > li {
    float: left;
    position: relative;
}
ul.menu > li > a {
    display: block;
    padding: 10px;
    color: white;
    background-color: #ffffff;
    text-decoration: none;
}
ul.menu > li > a:hover {
    background-color: white;
}
ul.submenu {
    display: none;
    position: absolute;
    width: 120px;
    top: 37px;
    left: 0;
    background-color: white;
	opacity: 0.7; /* Значение прозрачности */
    filter: alpha(Opacity=70);
    border: 1px solid #ffffff;
}
ul.submenu > li {
    display: block;
}
ul.submenu > li > a {
    display: block;
    padding: 10px;
    color: #3c3c3c;
    background-color: #ffffff;
    text-decoration: none;
}
ul.submenu > li > a:hover {
    text-decoration: none;
    color: #710000;
}
ul.menu > li:hover > ul.submenu {
    display: block;
}



